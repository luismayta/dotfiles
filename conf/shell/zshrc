#!/usr/bin/env zsh
# -*- coding: utf-8 -*-

export ZSH=$HOME/.dotfiles

# AUTO-UPDATES
export UPDATE_ZSH_DAYS=1

# DISABLE AUTOCORRECTION
DISABLE_CORRECTION="true"

# ANTIBODY â€” plugin manager
source <(antibody init)

# setup antibody
antibody bundle caarlos0/zsh-mkc
antibody bundle caarlos0/zsh-git-sync
antibody bundle zsh-users/zsh-completions
antibody bundle zsh-users/zsh-syntax-highlighting
antibody bundle zsh-users/zsh-history-substring-search
antibody bundle mafredri/zsh-async
antibody bundle marszall87/lambda-pure
antibody bundle bobthecow/git-flow-completion
antibody bundle luismayta/zsh-git-aliases
antibody bundle luismayta/zsh-docker-compose-aliases
antibody bundle luismayta/zsh-servers-functions
antibody bundle Tarrasch/zsh-autoenv
antibody bundle Tarrasch/zsh-colors
antibody bundle chrissicool/zsh-256color
antibody bundle dgnest/zsh-gvm-plugin
antibody bundle wbinglee/zsh-wakatime

# load everything but the path and completion files
source "$ZSH/zsh/completions.zsh"

# initialize autocomplete here, otherwise functions won't be loaded
autoload -U compinit
compinit -i -d ${ZSH_COMPDUMP}

# don't put duplicate lines in the history. See bash(1) for more options
# ... or force ignoredups and ignorespace
HISTCONTROL=ignoredups:ignorespace

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=1000
HISTFILESIZE=2000

[ -r ~/.bashrc ] && source ~/.bashrc
