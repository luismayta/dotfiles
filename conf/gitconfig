[user]
    name = "@slovacus"
    email = slovacus@gmail.com

[core]
    autocrlf = input
    excludesfile = ~/.gitignore
	editor = vim

[color]
    ui = true
    status = auto
    branch = auto
    diff = auto
    interactive = auto
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    ci = commit
    ck = checkout
    br = branch
    lg = log --graph -10
    ll = log --graph -30 --pretty=format:'%Cgreen%h %Creset%ad %Cblue%an %Creset%s'
    in = fetch --dry-run
    out = push --dry-run
    cm = commit
    rm-orig = find ./ -name \"*.orig\" | xargs rm
	st = status

[diff]
        tool = meld

[difftool]
        prompt = false

[merge]
	tool = meld
