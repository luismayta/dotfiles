#!/usr/bin/env bash

ROOT="`pwd`"
HOME=~

[ -r "$ROOT/src/load.sh" ] && source "$ROOT/src/load.sh"

cat <<EOF

--------------------------
    Test Install
--------------------------

EOF

"$ROOT/install.sh"

ret="0"
if [ ! -e "$HOME/.dotfiles/.git" ]; then
    ret="1"
    error "Error in Install"
else
    success "Yeah Install Done"
fi

cat <<EOF

--------------------------
    Execution Bootstrap
--------------------------

EOF

"$ROOT/bootstrap.sh"

cat <<EOF

--------------------------
    Finished Bootstrap
--------------------------

EOF
