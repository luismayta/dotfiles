# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{el,md,coffee,pp,yml}]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

# Tabs in less
[*.less]
indent_style = tab
indent_size = 2

[*.css]
indent_style = tab
indent_size = 2

[*.{js,py,sh}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.html]
indent_style = tab
indent_size = 2
